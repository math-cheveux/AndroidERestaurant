<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<ImageView
		android:id="@+id/cart_badge_icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/ic_action_cart" />

	<TextView
		android:id="@+id/cart_badge"
		android:layout_width="20dp"
		android:layout_height="20dp"
		android:layout_marginTop="-8dp"
		android:background="@drawable/badge_background"
		android:gravity="center"
		android:padding="3dp"
		android:text="@string/default_preview"
		android:textColor="@android:color/white"
		android:textSize="10sp"
		app:layout_constraintStart_toEndOf="@+id/cart_badge_icon"
		app:layout_constraintTop_toBottomOf="@+id/cart_badge_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>